<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KuaforProjesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KuaforProjesi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <meta name="viewport" content="width=device-width, initial-scale=1">


</head>
<body>

    <header>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">

            <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow">


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
                </div>


                <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                    <ul class="navbar-nav flex-grow-1 ">

                        <li class="nav-item">
                            <a class="nav-link " style="margin-right:auto " asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " style="margin-right: auto " asp-area="" asp-controller="Home" asp-action="hakkimizda">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " style="margin-right:auto" asp-area="" asp-controller="Home" asp-action="Hizmetlerimiz">Hizmetlerimiz</a>
                        </li>
                        @*<li class="nav-item">
            <a class="nav-link " style="margin-right: auto" asp-area="" asp-controller="Home" asp-action="Randevu">Randevu</a>
        </li>*@
                        <li class="nav-item">
                            <a class="nav-link " style="margin-right: auto" asp-area="" asp-controller="Home" asp-action="İletisim">İletişim</a>
                        </li>


                        @if (ViewBag.KisiID == null && ViewBag.YoneticiId == null)
                        {
                            <li class="nav-item">

                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="kayitLogin">
                                    <div style="display:flex;color:dimgray">
                                        <div>
                                            <i class="bi bi-person-fill-check"></i>
                                        </div>

                                        <div>
                                            <p>Hesabım</p>
                                        </div>
                                    </div>

                                </a>
                            </li>
                        }

                        @if (ViewBag.KisiID != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link " style="margin-right: auto" asp-area="" asp-controller="Home" asp-action="MüsteriSayfası">Randevu</a>
                            </li>
                        }


                        @if (ViewBag.YoneticiId != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link " style="margin-right: auto" asp-area="" asp-controller="Home" asp-action="YoneticiMainPage">Randevular</a>
                            </li>
                        }
                         

                    </ul>
                </div>

                <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <img class="logo" src="~/css/logo/logoson.png" />
                        </a>
                    </div>
                </div>

                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">

                    <ul class="navbar-nav flex-grow-2 ">

                        <li class="nav-item">
                            <a class="nav-link " style="margin-right:auto " asp-area="" asp-controller="Home" asp-action="YolTarifi">Yol Tarifi Al</a>
                        </li>
                        @if (ViewBag.KisiID != null|| ViewBag.KisiID == null && ViewBag.YoneticiId == null)
                        {
                            <li class="nav-item">

                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="FiyatListesi">
                                    <div style="display:flex;color:dimgray">
                                        <div>
                                            <p>Fiyat Listesi </p>

                                        </div>
                                        <div>
                                            <i class="bi bi-tags-fill"></i>
                                        </div>


                                    </div>

                                </a>

                            </li>
                        }
                        @if (ViewBag.YoneticiId != null)
                        {
                            <li class="nav-item">

                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="YoneticiFiyatGuncellemesi">
                                    <div style="display:flex;color:dimgray">
                                        <div>
                                            <p>Fiyat Listesi Güncelle </p>

                                        </div>
                                        <div>
                                            <i class="bi bi-tags-fill"></i>
                                        </div>


                                    </div>

                                </a>

                            </li>
                        }

                        @if (ViewBag.KisiID != null || ViewBag.YoneticiId != null)
                        {

                            <li class="nav-item">
                                <a class="nav-link " style="margin-right: auto" asp-area="" asp-controller="Home" asp-action="Cikis">Çıkış</a>
                            </li>
                        }





                    </ul>
                </div>
            </nav>
        </div>


    </header>

    <main role="main">
        @RenderBody()
    </main>


    @*<footer >
            <div class="container">
                &copy;  Berber Salonu - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
